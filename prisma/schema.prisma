generator client {
  provider = "prisma-client-js"
  output   = "prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Receipt {
  id           String   @id @default(uuid())
  storeName    String
  purchaseDate DateTime
  totalAmount  Float
  items        Item[]
  imageUrl     String
  createdAt    DateTime @default(now())
}

model Item {
  id        String  @id @default(uuid())
  name      String
  quantity  Int?
  receiptId String
  receipt   Receipt @relation(fields: [receiptId], references: [id])
}
